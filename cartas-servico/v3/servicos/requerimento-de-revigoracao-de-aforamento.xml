<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<servico xmlns="http://servicos.gov.br/v3/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://servicos.gov.br/v3/schema ../servico.xsd">
    <nome>Requerimento de Revigoração de Aforamento</nome>
    <sigla/>
    <nomes-populares>
        <item>Recuperar uso do terreno</item>
    </nomes-populares>
    <descricao><![CDATA[Este serviço permite solicitar o restabelecimento do aforamento que perdeu seu efeito em decorrência do não pagamento do foro durante 3 anos consecutivos ou 4 anos intercalados.]]></descricao>
    <contato/>
    <gratuito>true</gratuito>
    <solicitantes>
        <solicitante>
            <tipo>Pessoa física ou jurídica</tipo>
            <requisitos><![CDATA[Que seja foreiro ou adquirente de imóvel da União com declaração de caducidade do aforamento]]></requisitos>
        </solicitante>
    </solicitantes>
    <tempo-total-estimado>
        <ate max="6" unidade="meses"/>
        <descricao/>
    </tempo-total-estimado>
    <etapas>
        <etapa>
            <titulo>Solicitar revigoração</titulo>
            <descricao><![CDATA[O interessado deverá acessar o site da SPU e preencher as informações requisitadas]]></descricao>
            <documentos>
                <default>
                    <item>CPF/CNPJ</item>
                    <item>RIP do imóvel</item>
                    <item>Declaração de caducidade do aforamento</item>
                </default>
            </documentos>
            <custos>
                <default/>
            </custos>
            <canais-de-prestacao>
                <default>
                    <canal-de-prestacao tipo="web">
                        <descricao><![CDATA[http://e-spu.planejamento.gov.br/#/requerimentoRevigoracaoAforamento?servico=29]]></descricao>
                    </canal-de-prestacao>
                </default>
            </canais-de-prestacao>
        </etapa>
        <etapa>
            <titulo>Receber resposta da SPU</titulo>
            <descricao><![CDATA[A SPU analisará o caso e responderá à requisição]]></descricao>
            <documentos>
                <default>
                    <item>CPF/CNPJ</item>
                    <item>RIP do imóvel</item>
                </default>
            </documentos>
            <custos>
                <default/>
            </custos>
            <canais-de-prestacao>
                <default>
                    <canal-de-prestacao tipo="web">
                        <descricao><![CDATA[http://e-spu.planejamento.gov.br/#/requerimentoRevigoracaoAforamento?servico=29]]></descricao>
                    </canal-de-prestacao>
                </default>
            </canais-de-prestacao>
        </etapa>
    </etapas>
    <orgao id="http://estruturaorganizacional.dados.gov.br/id/unidade-organizacional/1986"/>
    <segmentos-da-sociedade>
        <item>Cidadãos</item>
        <item>Empresas</item>
    </segmentos-da-sociedade>
    <areas-de-interesse>
        <item>Patrimônio</item>
    </areas-de-interesse>
    <palavras-chave>
        <item>pedir uso de volta</item>
        <item>reaforar</item>
        <item>recomeçar a pagar</item>
    </palavras-chave>
    <legislacoes>
        <item><![CDATA[...]]></item>
    </legislacoes>
</servico>
