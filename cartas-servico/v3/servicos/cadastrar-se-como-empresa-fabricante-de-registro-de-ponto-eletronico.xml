        <quantidade>0</quantidade>
        <unidade></unidade>
        <descricao></descricao>
    </validade-documento>
    <etapas>
        <etapa id="2181">
            <titulo>Cadastrar-se no CAREP</titulo>
            <descricao>Você deverá acessar o sistema CAREP e preencher as informações pedidas</descricao>
            <documentos>
                <default>
                    <item id="2240">Dados da empresa</item>
