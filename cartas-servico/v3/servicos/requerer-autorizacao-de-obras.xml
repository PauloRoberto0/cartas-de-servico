<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<servico xmlns="http://servicos.gov.br/v3/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://servicos.gov.br/v3/schema ../servico.xsd">
    <nome><![CDATA[Requerer Autorização de obras]]></nome>
    <sigla/>
    <nomes-populares/>
    <descricao><![CDATA[Este serviço permite solicitar autorização para execução de obras e intervenções em imóveis da União, desde que não alterem a natureza do bem.]]></descricao>
    <contato/>
    <gratuito>true</gratuito>
    <solicitantes>
        <solicitante>
            <tipo>Pessoa física</tipo>
            <requisitos><![CDATA[Que tenha capacidade para fins de processo administrativo nos termos do art. 10 da Lei nº 9.784, de 1999 (maiores de 18 anos) e tenha qualidade de interessado (art. 9º da Lei nº 9.784, de 1999)]]></requisitos>
        </solicitante>
        <solicitante>
            <tipo>Pessoa jurídica</tipo>
            <requisitos><![CDATA[Que tenha qualidade de interessado nos termos do art. 9º da Lei nº 9.784, de 1999]]></requisitos>
        </solicitante>
    </solicitantes>
    <tempo-total-estimado>
        <ate max="6" unidade="meses"/>
        <descricao/>
    </tempo-total-estimado>
    <etapas>
        <etapa>
            <titulo>Solicitar Autorização</titulo>
            <descricao><![CDATA[O interessado deverá entrar no site da SPU e preencher as informações requisitadas.]]></descricao>
            <documentos>
                <default>
                    <item>CPF/CNPJ</item>
                    <item>Planejamento da obra</item>
                    <item>Dados do imóvel</item>
                </default>
            </documentos>
            <custos>
                <default/>
            </custos>
            <canais-de-prestacao>
                <default>
                    <canal-de-prestacao tipo="web">
                        <descricao><![CDATA[http://e-spu.planejamento.gov.br/#/requerimentoAutorizacaoObras?servico=30#dados-documentos]]></descricao>
                    </canal-de-prestacao>
                </default>
            </canais-de-prestacao>
        </etapa>
        <etapa>
            <titulo>Receber resposta da SPU</titulo>
            <descricao><![CDATA[Após análise, a SPU dará resposta positiva ou negativa ao pedido de autorização]]></descricao>
            <documentos>
                <default>
                    <item>CPF/CNPJ</item>
                    <item>RIP do imóvel</item>
                </default>
            </documentos>
            <custos>
                <default/>
            </custos>
            <canais-de-prestacao>
                <default>
                    <canal-de-prestacao tipo="web">
                        <descricao><![CDATA[http://e-spu.planejamento.gov.br/#/requerimentoAutorizacaoObras?servico=30#dados-documentos]]></descricao>
                    </canal-de-prestacao>
                </default>
            </canais-de-prestacao>
        </etapa>
    </etapas>
    <orgao id="http://estruturaorganizacional.dados.gov.br/id/unidade-organizacional/1986"/>
    <segmentos-da-sociedade>
        <item>Cidadãos</item>
        <item>Empresas</item>
        <item>Demais segmentos (ONGs, organizações sociais, etc)</item>
    </segmentos-da-sociedade>
    <areas-de-interesse>
        <item>Habitação</item>
        <item>Patrimônio</item>
    </areas-de-interesse>
    <palavras-chave>
        <item>autorização</item>
        <item>obra</item>
        <item>reforma</item>
    </palavras-chave>
    <legislacoes>
        <item><![CDATA[Lei nº 9.784, de 1999]]></item>
    </legislacoes>
</servico>
