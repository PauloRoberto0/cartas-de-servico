        <item idSegmento="4" idServicoSegmento="8217">Demais segmentos (ONGs, organizações sociais, etc)</item>
    </segmentos-da-sociedade>
    <areas-de-interesse>
        <item>Meio ambiente</item>
    </areas-de-interesse>
