<servico xsi:schemaLocation="http://servicos.gov.br/v3/schema.../servico.xsd" xmlns="http://servicos.gov.br/v3/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <id>obter-autorizacao-direta</id>
    <dbId>2805</dbId>
    <nome>Obter Autorização Direta</nome>
    <sigla>AD</sigla>
    <descricao>Procedimento administrativo para autorização de atividades condicionadas ao controle do poder Público, não sujeitas ao licenciamento ambiental e de atividades cuja autorização seja exigida por normas específicas.</descricao>
    <contato></contato>
    <gratuito>false</gratuito>
    <porcentagem-manual>false</porcentagem-manual>
    <servico-digital>false</servico-digital>
    <link-servico-digital></link-servico-digital>
    <solicitantes>
        <solicitante id="4526">
            <tipo>Pessoas físicas e jurídicas</tipo>
            <requisitos>A atividade requerida não ser sujeita ao licenciamento ambiental</requisitos>
        </solicitante>
    </solicitantes>
    <tempo-total-estimado>
        <entre min="30" max="60" unidade="dias-corridos"/>
        <descricao></descricao>
    </tempo-total-estimado>
    <validade-documento>
        <tipo>Sem validade</tipo>
        <quantidade>0</quantidade>
        <unidade></unidade>
        <descricao>Podendo ser retificada ou cancelada a qualquer momento pelo gestor da unidade de conservação, mediante justificativa.</descricao>
    </validade-documento>
    <etapas>
        <etapa id="8535">
            <titulo>Solicitar autorização</titulo>
            <descricao>Solicitar autorização conforme Art. 3º da Instrução Normativa ICMBio 09/2009.</descricao>
            <documentos>
                <default>
                    <item id="12499">Descrição detalhada, com mapas ou croquis;</item>
                    <item id="12500">Localização ou trajeto;</item>
                    <item id="12501">Cronograma de atividades;</item>
                    <item id="12502">Expectativa de duração;</item>
                    <item id="12503">Dimensionamento do projeto ou atividade;</item>
                    <item id="12504">Propostas para mitigação dos potenciais impactos à unidade de conservação;</item>
                    <item id="12505">Apresentação de documentação que se fizer necessária visando atender legislação específica; e</item>
                    <item id="12506">Demais informações pertinentes.</item>
                </default>
                <caso id="1141" descricao="Em caso de propriedade  particular">
                    <documento>
                        <id>12498</id>
                        <descricao>Documento comprobatório de propriedade ou posse da área.</descricao>
                    </documento>
                </caso>
            </documentos>
            <custos>
                <default>
                    <custo id="882">
                        <descricao>Taxa de análise e Autorização</descricao>
                        <moeda>R$</moeda>
                        <valorVariavel>conforme Portaria MMA-ICMBio 366/2009</valorVariavel>
                        <statusCustoVariavel>1</statusCustoVariavel>
                    </custo>
                </default>
            </custos>
            <canais-de-prestacao>
                <default>
                    <canal-de-prestacao id="9108" tipo="presencial">
                        <descricao>Na &lt;a href="http://www.icmbio.gov.br/portal/unidades-de-conservacao" target="_blank"&gt;Unidade de Conservação&lt;/a&gt; onde se deseja realizar a atividade</descricao>
                    </canal-de-prestacao>
                </default>
            </canais-de-prestacao>
        </etapa>
    </etapas>
    <orgao id="http://estruturaorganizacional.dados.gov.br/id/unidade-organizacional/91842" dbId="36726">
        <nomeOrgao>Instituto Chico Mendes de Conservação da Biodiversidade (ICMBio)</nomeOrgao>
    </orgao>
